                    <TextBox x:Name="tb_mail" HorizontalAlignment="Left" Height="16" Margin="278,122,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="148"/>
                    <Label x:Name="label_Copy3" Content="Télephone" HorizontalAlignment="Left" Height="30" Margin="149,151,0,0" VerticalAlignment="Top" Width="100" FontWeight="Bold"/>
