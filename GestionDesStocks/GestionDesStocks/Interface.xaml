                    <Label x:Name="label_Copy4" Content="Adresse postale" HorizontalAlignment="Left" Height="24" Margin="149,181,0,0" VerticalAlignment="Top" Width="100" FontWeight="Bold"/>
                    <TextBox x:Name="tb_adresse" HorizontalAlignment="Left" Height="16" Margin="278,189,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="332"/>
                    <Label x:Name="label_Copy5" Content="Ville" HorizontalAlignment="Left" Height="24" Margin="149,212,0,0" VerticalAlignment="Top" Width="100" FontWeight="Bold"/>
                    <TextBox x:Name="tb_ville" HorizontalAlignment="Left" Height="16" Margin="278,220,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="148"/>
                    <Label x:Name="label_Copy6" Content="Code postal" HorizontalAlignment="Left" Height="35" Margin="149,244,0,0" VerticalAlignment="Top" Width="100" FontWeight="Bold"/>
                    <TextBox x:Name="tb_cp" HorizontalAlignment="Left" Height="16" Margin="278,252,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="79"/>
                    <Button x:Name="b_modifier" Content="Modifier" HorizontalAlignment="Left" Height="24" Margin="149,302,0,0" VerticalAlignment="Top" Width="114"/>
                    <Button x:Name="b_valider" Content="Valider" HorizontalAlignment="Left" Height="24" Margin="378,302,0,0" VerticalAlignment="Top" Width="114"/>
                    <TextBox x:Name="id" HorizontalAlignment="Left" Height="19" Margin="394,11,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="32"/>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
